@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<h1>Simple Form</h1>

<form method="post">
    <div class="form-group">
        <label class="form-control" asp-for="LogInBindingModel.UserName" />
        <input class="form-control" asp-for="LogInBindingModel.UserName" />
        <span  class="form-text" asp-validation-for="LogInBindingModel.UserName"></span> 
    </div>

    <div class="form-group">
        <button class="form-control btn btn-danger" type="submit">Submit</button>
    </div>
</form>